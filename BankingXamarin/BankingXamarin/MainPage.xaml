<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankingXamarin.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="20">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>



        <Entry x:Name="DepositAmountEntry" Placeholder="Deposit Amount" Keyboard="Numeric" />
        <Entry x:Name="DepositEntry" Placeholder="Deposit Reason" />
        <Button x:Name="DepositButton" Text="Deposit" Clicked="DepositButton_Clicked"/>

    </StackLayout>

</ContentPage>
